<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Movie-Rental-Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("my", required: false)

</head>
<body id="particles-js" style="height: 100%; background-color: black">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Movie Application", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Customers", "Customer", "Customers")</li>
                    <li>@Html.ActionLink("Movies", "Random", "Movies")</li>
                    <li>@Html.ActionLink("Rentals", "NewRental", "Rentals")</li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content mt-5">
        @RenderBody()
        <hr />
        <!--<div id="particles-js" style="height: 100%; background-color: black" class="mb-4"></div>-->
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/lib")
    @RenderSection("my", required: false)
    @RenderSection("scripts", required: false)
</body>
</html>

@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
    <script>

        particlesJS.load("particles-js", {
            "particles": {
